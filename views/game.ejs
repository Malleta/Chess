<body>


<canvas id="myCanvas" width="800px" height="800px">
</canvas>


<script>

    var c = document.getElementById("myCanvas");
    var ctx = c.getContext("2d");


        for(j=0;j<8;j++){
            ctx.moveTo(0,100*j);
            ctx.lineTo(800,100*j);
            ctx.stroke();

            ctx.moveTo(100*j,0);
            ctx.lineTo(100*j,800);
            ctx.stroke();
        }

    var left = 0;
    for(var a=0;a<8;a++) {
        for(var b=0; b<8;b+=2) {
            startX = b * 100;
            if(a%2==0) startX = (b+1) * 100;
            ctx.fillRect(startX + left,(a*100) ,100,100);
        }}


    var imageObj = new Image();

    imageObj.onload = function() {
        ctx.drawImage(imageObj, 0, 0);
    };
    imageObj.src = '/images/BlackQueen.png';

</script>


